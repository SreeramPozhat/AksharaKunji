{
    "title": "Shift Delete for Grapheme Cluster",
    "rules": [
        {
            "description": "Shift+Delete triggers Left Arrow and Fn+Delete",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "delete_or_backspace",
                        "modifiers": {
                            "mandatory": [
                                "shift"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow"
                        },
                        {
                            "key_code": "delete_or_backspace",
                            "modifiers": [
                                "fn"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}